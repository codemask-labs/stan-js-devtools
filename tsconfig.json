{
    "compilerOptions": {
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "outDir": "dist",
        "sourceMap": false,
        "removeComments": false,
        "declaration": false,
        "declarationMap": false,
        "lib": [
            "es2022",
            "dom",
            "dom.iterable"
        ],
        "baseUrl": "./src",
        "paths": {
            "lib/*": ["./lib/*"],
            "features/*": ["./features/*"]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
